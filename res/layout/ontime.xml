<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#000066" android:layout_width="fill_parent"
	android:layout_height="15dip" android:padding="1dip">

	<ImageView android:id="@+id/clock" android:layout_width="15dip"
		android:layout_height="fill_parent" android:layout_marginRight="1dip"
		android:src="@drawable/clock" />

	<TextView android:id="@+id/secondLine" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_toRightOf="@id/clock"
		android:textSize="10sp" android:singleLine="true" android:text="定时发送短信" />

</RelativeLayout>
